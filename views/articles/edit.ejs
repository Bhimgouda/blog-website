<% layout('layout/boilerplate') -%>

<h1>Edit : <%= article.title %></h1>

<form method="POST" action="/articles/<%= article._id %>?_method=PUT">
  <div>
    <input
      value="<%= article.title %>"
      type="text"
      name="title"
      placeholder="title"
    />
  </div>
  <div>
    <input
      value="<%= article.description %> "
      type="text"
      name="description"
      placeholder="description"
    />
  </div>
  <div>
    <input
      value="<%= article.keywords %> "
      type="text"
      name="keywords"
      placeholder="Add keywords"
    />
  </div>
  <div>
    <input
      value="<%= article.heroImage %> "
      type="text"
      name="heroImage"
      placeholder="Add Image Link"
    />
  </div>
  <div>
    <textarea
      type="text"
      name="content"
      placeholder="article content"
      cols="30"
      rows="10"
    >
<%= article.content %>"</textarea
    >
  </div>
  <button type="submit">Publish</button>
</form>

<button><a href="/articles/<%= article._id  %>">Go back to article</a></button>
