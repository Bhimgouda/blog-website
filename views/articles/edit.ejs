<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit-Article</title>
    <link
      href="https://cdn.quilljs.com/1.0.0/quill.snow.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/text-editor.css" />
    <style>
      #editor-container {
        width: 100%;
        min-height: 100vh;
      }
    </style>
  </head>
  <body>
    <h1>Publish New Article</h1>

    <form method="POST" action="/articles" enctype="multipart/form-data">
      <div>
        <input
          type="text"
          name="title"
          placeholder="title"
          value="<%=article.title%>"
        />
      </div>
      <div>
        <input
          type="text"
          name="description"
          placeholder="description"
          value="<%=article.description%>"
        />
      </div>
      <div>
        <input
          type="text"
          name="keywords"
          placeholder="Add keywords"
          value="<%=article.keywords%>"
        />
      </div>

      <div>
        <input
          type="file"
          value=""
          name="heroImage"
          placeholder="Add Image Link"
        />
      </div>

      <!-- Create the editor container -->
      <div class="row form-group">
        <input name="content" type="hidden" />
        <div id="editor-container"><%- article.content %></div>
      </div>

      <button type="submit">Publish</button>
    </form>
    <button><a href="/articles">All Articles</a></button>
    <!-- Include the Quill library -->

    <!-- Initialize Quill editor -->
    <script src="//cdn.quilljs.com/latest/quill.min.js"></script>
    <script src="/js/text-editor.js"></script>
  </body>
</html>
